<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    
    <link rel="stylesheet" type="text/css" href="/stylesheets/footer.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/global.css">
    
    
</head>

<body>

	<!-- The main object loaded is referenced by "forum" -->

    <% include partials/header %>
	
	<div class="body-container">
		<div class="content-container center-div">
			<div class="alignment-container">
				<div class="make-flex flex-horiz" id="question-container">
					<div class="qa-shadow" id="question">
						<h2 id="question-title">
							<%= forum.title %>
						</h2>
						
						<p id="question-body">
							<%= forum.body %>
						</p>
						<br>

						<div class="summary-question-tags">
                                        		<a class="btn btn-primary" style="background-color: #20a7bc; border: #20a7bc; color: white; margin-right: 5px;" id="likeQuestion" role="button">Like</a><span id="likeCounter">0</span>
                                        		<a class="btn btn-primary" id="dislikeQuestion" role="button" style="background-color: #20a7bc; border: #20a7bc; color: white;">Dislike</a>
                                        		<span id="dislikeCounter">0</span>
                                        		<!--<a class="btn btn-primary" href="#" role="button">Tag</a>-->
                                    		</div>
					</div>
					
					<div class="make-flex" id="user-asked-div">
						<p class="align-center user-metrics-question center-div" id="user-asked-info">
						<%= forum.user_asked %></br><%= forum.question_pts %></br><%= forum.datetime_asked %>
						</p>
					</div>
					
				</div>
				
				<div id="answer-logo">
					<p>Answers [<%= forum.answers.length %>] </p>
				</div>
				
				<div class="make-flex flex-vert" id="answers-container">
				
					<% for (var ans_idx = 0; ans_idx<forum.answers.length; ans_idx++) { %>
						
						<% var answers = forum.answers %>
						<div class="answers make-flex flex-horiz flex-right">
							<div class="make-flex flex-vert qa-shadow answer-div">
								<p class="answer-p">
									<%= answers[ans_idx].answer %>
								</p>
								<p class="user-metrics-answer self-right">  
									<%= answers[ans_idx].user_answered %> | <%= answers[ans_idx].answer_pts %> | <%= answers[ans_idx].datetime_answered %> 
								</p>
								<div class="summary-question-tags">
                                       					 <a class="btn btn-primary" href="#" role="button">Like</a>
                                        				<a class="btn btn-primary" href="#" role="button">Dislike</a>
                                        				<!--<a class="btn btn-primary" href="#" role="button">Tag</a>-->
                                				</div>
							</div>
						</div>
						
					<% } %>
						
				
				</div>
			
				<div id="submit-answer-div">
					<form class="make-flex flex-vert" action=<%= "/question_forum/answer_to/" + forum.q_id %> method="post" id="answer-form">
						<textarea name="answer_body" class="text-input" id="answer-textarea" form="answer-form" required="required" placeholder="Enter your answer: " maxlength=1000></textarea>
						<input id="submit-button" class="button self-right" type="submit" value="Answer!">
					</form>
				</div>
			
			</div>
		</div>
	</div>
	
	<% include partials/footer %>
  </body>
    
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    
    <script src="script.js"></script>
    
    
    </html>